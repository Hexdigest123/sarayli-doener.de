# PostgreSQL connection string (used for local dev without Docker)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://sarayli:sarayli_secret@localhost:5432/sarayli_doener

# Admin password hash (bcrypt)
# Generate with: node -e "import('bcryptjs').then(b => b.hash('your-password', 12).then(console.log))"
# IMPORTANT: Escape every $ with \$ (Vite's dotenv-expand interprets $ as variable references)
# Example: $2b$12$abc â†’ \$2b\$12\$abc
ADMIN_PASSWORD_HASH=

# PostgreSQL container credentials
POSTGRES_USER=sarayli
POSTGRES_PASSWORD=sarayli_secret
POSTGRES_DB=sarayli_doener
POSTGRES_PORT=5432

# App settings
ORIGIN=https://sarayli-doener.de
APP_PORT=2010
